<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="ExifDateFixer.Avalonia.MainWindow"
        Title="EXIF Date Fixer"
        Width="900" Height="700"
        MinWidth="700" MinHeight="500">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        
        <!-- Header with title and version -->
        <Border Grid.Row="0" Background="#F3F3F3" Padding="24,16">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="ðŸ“" FontSize="32" VerticalAlignment="Center" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="EXIF Date Fixer" FontSize="24" FontWeight="Bold" />
                    <TextBlock x:Name="VersionTextBlock" Text="Version 1.0.0" 
                               FontSize="12" Foreground="#666666" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Settings Panel -->
        <StackPanel Grid.Row="1" Margin="24" Spacing="16">
            <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" />
            
            <!-- Path Selection -->
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Folder Path" FontSize="12" Foreground="#666666" />
                    <TextBox x:Name="PathTextBox" 
                             Watermark="Select a folder to scan for images..."
                             IsReadOnly="True"
                             Margin="0,0,8,0"/>
                </StackPanel>
                <Button x:Name="BrowseButton" 
                        Grid.Column="1"
                        Content="Browse..." 
                        Click="BrowseButton_Click"
                        VerticalAlignment="Bottom"
                        MinWidth="100"
                        Background="#0078D4"
                        Foreground="White"/>
            </Grid>

            <!-- Options -->
            <StackPanel Spacing="8">
                <CheckBox x:Name="RecursiveCheckBox" 
                          Content="Scan subdirectories recursively"
                          IsChecked="True"/>
                <CheckBox x:Name="DryRunCheckBox" 
                          Content="Dry run (preview changes without modifying files)"
                          IsChecked="False"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="StartButton" 
                        Content="Start Processing" 
                        Click="StartButton_Click"
                        MinWidth="120"
                        Background="#0078D4"
                        Foreground="White"/>
                <Button x:Name="ClearLogButton" 
                        Content="Clear Log" 
                        Click="ClearLogButton_Click"
                        MinWidth="100"/>
            </StackPanel>
        </StackPanel>

        <!-- Log Viewer -->
        <Grid Grid.Row="2" Margin="24,0,24,0" RowDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Text="Processing Log" 
                       FontSize="18" FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>
            
            <Border Grid.Row="1" 
                    Background="#FAFAFA"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer x:Name="LogScrollViewer" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="12">
                    <TextBlock x:Name="LogTextBlock" 
                               TextWrapping="Wrap"
                               FontFamily="Courier New,Consolas,monospace"
                               FontSize="12"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F3F3F3" Padding="24,12">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Ready" 
                           VerticalAlignment="Center"/>
                
                <ProgressBar x:Name="ProgressBar" 
                             Grid.Column="1"
                             Width="200"
                             IsIndeterminate="False"
                             IsVisible="False"
                             VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
